{
  "name": "fullstack-app",
  "version": "1.0.0",
  "description": "A full-stack application with React frontend and Express backend",
  "main": "backend/server.js",
  "scripts": {
    "start": "node backend/server.js",
    "frontend": "cd frontend && npm start",
    "backend": "cd backend && nodemon server.js",
    "test:frontend": "cd frontend && jest --config jest.config.js",
    "test:backend": "cd backend && jest --config jest.config.js",
    "test": "npm run test:frontend && npm run test:backend"
  },
  "author": "Chris Horne",
  "license": "MIT",
  "dependencies": {
    "express": "^4.17.1",
    "mongoose": "^5.12.3",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.2.0"
  },
  "devDependencies": {
    "jest": "^26.6.3",
    "babel-jest": "^26.6.3",
    "identity-obj-proxy": "^3.0.0",
    "supertest": "^6.1.3",
    "nodemon": "^2.0.7"
  }
}